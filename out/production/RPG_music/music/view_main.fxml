<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<VBox fx:id="parentBox" alignment="CENTER" prefHeight="425.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="music.ControllerMain">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem onAction="#handleSettings" mnemonicParsing="false" text="Music Directory"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Pane minHeight="100.0" minWidth="300.0" prefHeight="114.0" prefWidth="300.0">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </VBox.margin>
            <children>
                <Button fx:id="btnPlay" layoutX="10.0" layoutY="11.0" mnemonicParsing="false"
                        onAction="#handleButtonPlay" prefHeight="80.0" prefWidth="80.0" text="PLAY"/>
                <Button layoutX="102.0" layoutY="11.0" mnemonicParsing="false" onAction="#handleButtonStop"
                        prefHeight="80.0" prefWidth="80.0" text="STOP"/>
                <Slider blockIncrement="0.01" layoutX="199.0" layoutY="48.0" majorTickUnit="0.1" max="1.0" min="0.0"
                        nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#handleVolumeScroll"
                        onKeyReleased="#handleVolumeScroll" onMouseClicked="#handleVolumeScroll"
                        onMouseDragged="#handleVolumeScroll" prefHeight="17.0" prefWidth="200.0" snapToTicks="true"
                        value="0.5">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Slider>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Pane>
        <GridPane fx:id="gridForButtons" alignment="CENTER" gridLinesVisible="true" hgap="5.0"
                  maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  style="-fx-background-color: blue;" vgap="5.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </GridPane>
        <TextArea fx:id="txtaMusicList" editable="false" maxHeight="1.7976931348623157E308" minHeight="50.0"
                  prefHeight="300.0" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>
    </children>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
</VBox>
